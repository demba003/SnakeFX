                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="networkButton" disable="true" mnemonicParsing="false" text="Two Players (Network)" toggleGroup="$group">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </RadioButton>
         </children>
      </VBox>
      <VBox fx:id="options" />
      <Button fx:id="startButton" disable="true" mnemonicParsing="false" text="START">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
